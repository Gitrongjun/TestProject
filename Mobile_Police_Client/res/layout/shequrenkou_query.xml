<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	
    <RadioGroup
                android:id="@+id/chaxunleixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/changzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="按身份证查询" />

                <RadioButton
                    android:id="@+id/zanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="按姓名查询" />
    </RadioGroup>
	
    <TextView android:text="请输入姓名或身份证号查询：" android:id="@+id/TextView03"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
	
	<EditText android:text="" android:id="@+id/chaxunneirong"
		android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>

	
	
	<TableLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<TableRow android:gravity="right">
			<Button android:text="查询信息" android:id="@+id/infobtn"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="right"></Button>

		</TableRow>
		<TextView android:text="查询结果" android:id="@+id/TextView02"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<TextView android:text="" android:id="@+id/resultinfo"
			android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>


	</TableLayout>
</LinearLayout>
